@model ControlerAcessoAluno.Models.TB_USUARIO

@{
    ViewBag.Title = "Login";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/controleAcesso.css" rel="stylesheet" />

<script src="~/scripts/jquery-1.10.2.js"></script>
<script src="~/scripts/bootstrap.min.js"></script>
<b />
<b />
<p><h2>""</h2></p>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="container">
        <div class="form-login">

            <img src="~/Imagens/secur1yt.png" />
            <div class="panel panel-default">
                <div class="panel-heading">
                    <center>  <div class="panel-title">Acesso Administrativo</div></center>
                </div>

                <div style="padding-top:30px" class="panel-body">
                    <div style="display:none" id="result" class="alert
                    alert-danger col-sm-12">

                    </div>

                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon">
                            <i class="glyphicon
                        glyphicon-user"></i>
                        </span>
                        @Html.EditorFor(model => model.EMAIL, new
                        {
                            htmlAttributes =
                        new
                             {
                                 @class = "form-control input-lg",
                                 placeholder =
                        "E-mail",
                                 autofocus = true
                             }
                        })
                        @Html.ValidationMessageFor(model => model.EMAIL, "",
                        new { @class = "text-danger" })
                    </div>

                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon">
                            <i class="glyphicon
                        glyphicon-lock"></i>
                        </span>
                        <input class="form-control input-lg text-box single-line" id="SENHA" name="SENHA" placeholder="Senha" type="password" value="">
                    </div>

                    <div style="margin-top:10px" class="form-group">

                        <div class="col-sm-12 controls">
                            <center>
                                <input type="submit" value="Acessar"
                                       class="btn primary btn-lg" />
                            </center>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
<div>
    @Html.Raw(ViewBag.msg)
</div>

